@page "/"
@inject NavigationManager Navigation

<PageTitle>Schema Diagram Viewer</PageTitle>

<div class="min-h-screen bg-office-gray flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full">
        <div class="text-center">
            <h1 class="text-3xl font-semibold text-office-dark mb-4">Schema Diagram Viewer</h1>
            <p class="text-gray-600 mb-8">Connect to SQL Server and visualize your database schema</p>
            <button @onclick="NavigateToConnection" class="w-full px-6 py-3 bg-office-blue text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-office-blue focus:ring-offset-2 transition-colors">
                Connect to Database
            </button>
        </div>
    </div>
</div>

@code {
    private void NavigateToConnection()
    {
        Navigation.NavigateTo("/connection");
    }
}
