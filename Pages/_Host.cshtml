@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SchemaDiagramViewer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    @* load Tailwind only in Development to avoid the production warning *@
    <environment include="Development">
        <script src="https://cdn.tailwindcss.com"></script>
    </environment>
    <environment exclude="Development">
         <script src="https://cdn.tailwindcss.com"></script>
    </environment>
    <link href="css/site.css" rel="stylesheet" />
    <link href="SchemaDiagramViewer.styles.css" rel="stylesheet" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'office-blue': '#0078d4',
                        'office-gray': '#f3f2f1',
                        'office-dark': '#323130',
                    },
                    fontFamily: {
                        'mono': ['Consolas', 'Monaco', 'Courier New', 'monospace'],
                    }
                }
            }
        }
    </script>
    <style>
        /* Make overall site feel more compact / admin-like */
        :root { font-size: 13px; } /* smaller base font for a dashboard/admin feel */

        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            color: #374151;
            background: #f3f4f6;
        }

        /* Compact table/view boxes in the UI */
        .table-box, .view-box {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }
        
        .table-box:hover, .view-box:hover {
            border-color: #cbd5e1;
        }
        
        /* Smooth scrolling for field lists */
        .table-box > div:last-child, .view-box > div:last-child {
            scrollbar-width: thin;
            scrollbar-color: #cbd5e1 transparent;
        }
        
        .table-box > div:last-child::-webkit-scrollbar,
        .view-box > div:last-child::-webkit-scrollbar {
            width: 6px;
        }
        
        .table-box > div:last-child::-webkit-scrollbar-track,
        .view-box > div:last-child::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .table-box > div:last-child::-webkit-scrollbar-thumb,
        .view-box > div:last-child::-webkit-scrollbar-thumb {
            background-color: #cbd5e1;
            border-radius: 3px;
        }
        
        .table-box > div:last-child::-webkit-scrollbar-thumb:hover,
        .view-box > div:last-child::-webkit-scrollbar-thumb:hover {
            background-color: #94a3b8;
        }
    </style>
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="js/diagram.js" type="module"></script>
</body>
</html>
