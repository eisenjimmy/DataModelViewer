<div class="fixed inset-0 z-[100] flex items-center justify-center bg-white dark:bg-gray-900 transition-opacity duration-700 @(isVisible ? "opacity-100" : "opacity-0 pointer-events-none")">
    <div class="text-center">
        <div class="mb-4 relative">
             <div class="w-16 h-16 border-4 border-blue-500 border-t-transparent rounded-full animate-spin mx-auto"></div>
             <div class="absolute inset-0 flex items-center justify-center">
                 <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" /></svg>
             </div>
        </div>
        <h1 class="text-2xl font-bold text-gray-800 dark:text-white tracking-wider">SCHEMA VIEWER</h1>
        <p class="text-gray-500 text-sm mt-2">Loading your workspace...</p>
    </div>
</div>

@code {
    private bool isVisible = true;

    protected override async Task OnInitializedAsync()
    {
        // Simulate loading or wait for initial render
        await Task.Delay(2000); // Show splash for at least 2 seconds
        isVisible = false;
        StateHasChanged();
    }
}
